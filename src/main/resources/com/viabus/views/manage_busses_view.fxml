<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.viabus.controllers.ManageBussesController">
   <children>
      <TableView fx:id="busTableView" prefHeight="347.0" prefWidth="600.0">
         <columns>
            <TableColumn fx:id="busNumberPlateColumn" prefWidth="150.0" text="Number Plates " />
            <TableColumn fx:id="busTypeColumn" minWidth="0.0" prefWidth="150.0" text="Bus Type" />
            <TableColumn fx:id="capacityColumn" minWidth="0.0" prefWidth="150.0" text="Seat Capacity" />
            <TableColumn fx:id="busAvailabilityColumn" prefWidth="150.0" text="Availability" />
         </columns>
      </TableView>
      <Button layoutX="72.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleAddButton" prefHeight="26.0" prefWidth="105.0" text="Add Bus" />
      <Button layoutX="248.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleEditButton" prefHeight="26.0" prefWidth="105.0" text="Edit" />
      <Button layoutX="433.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleDeleteButton" prefHeight="26.0" prefWidth="105.0" text="Delete" />
   </children>
</AnchorPane>
